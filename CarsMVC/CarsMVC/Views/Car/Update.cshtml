@model Car
@{
    ViewData["Title"] = "Autó Módosítása";
}

<h1>Autó adatainak módosítása</h1>
<form method="post" action="Update">
    <div class="form-group">
        <label for="">Egyedi azonosító</label>
        <input class="form-control" asp-for="CarId" value="@Model.CarId" readonly>
    </div>
    <div class="form-group">
        <label for="">Márka</label>
        <input class="form-control" asp-for="Brand" value="@Model.Brand">
    </div>
    <div class="form-group">
        <label for="">Típus</label>
        <input class="form-control" asp-for="Type" value="@Model.Type">
    </div>
    <div class="form-group">
        <label for="">Rendszám</label>
        <input class="form-control" asp-for="RegistrationNumber" value="@Model.RegistrationNumber">
    </div>
    <div class="form-group">
        <label for="">Gyártási Dátum</label>
        <input type="date" class="form-control" asp-for="ProductionDate" value="@(Model.ProductionDate.HasValue ? Model.ProductionDate.Value.ToString("yyyy-MM-dd") : "")">
    </div>

    <button type="submit" class="btn btn-primary">Módosítás</button>
    @Html.ActionLink("Mégse", "Index", "Car")
</form>
